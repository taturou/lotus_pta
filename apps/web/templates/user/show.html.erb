<div class="mxn1 mb1 h5">
  <a href="/" class="button button-narrow button-transparent blue">
    <i class="fa fa-home"></i>
  </a>
  /
  <a href="/user/" class="button button-narrow button-transparent blue">
    <i class="fa fa-list-alt"></i>
    名簿
  </a>
  /
  <span class="button button-narrow button-transparent gray">
    <i class="fa fa-user"></i>
    <%= user.last_name %><%= user.first_name %>
  </span>
</div>

<div class="flex">
  <div class="m0 gray">
    氏名
  </div>
</div>
<div class="flex h3 mb1">
  <div class="flex-auto border rounded p1">
    <ruby>
      <rb>
        <%= user.last_name %>
      </rb>
      <rp>（</rp>
      <rt>
        <%= user.last_name_ruby %>
      </rt>
      <rp>）</rp>
    </ruby>

    <ruby>
      <rb>
        <%= user.first_name %>
      </rb>
      <rp>（</rp>
      <rt>
        <%= user.first_name_ruby %>
      </rt>
      <rp>）</rp>
    </ruby>
  </div>
</div>

<div class="flex">
  <div class="m0 gray">
    子供
  </div>
</div>
<div class="flex rounded h3 mb1">
  <% user.children.each do |child| %>
    <div class="flex-auto border p1">
      <ruby>
        <rb>
          <%= child.last_name %>
        </rb>
        <rp>（</rp>
        <rt>
          <%= child.last_name_ruby %>
        </rt>
        <rp>）</rp>
      </ruby>

      <ruby>
        <rb>
          <%= child.first_name %>
        </rb>
        <rp>（</rp>
        <rt>
          <%= child.first_name_ruby %>
        </rt>
        <rp>）</rp>
      </ruby>
    </div>
  <% end %>
</div>

<div class="flex">
  <div class="m0 gray">
    電話番号
  </div>
</div>
<div class="flex h3 mb1">
  <div class="flex-auto border rounded p1">
    <%= user.phone %>
  </div>
</div>

<div class="flex">
  <div class="m0 gray">
    メールアドレス
  </div>
</div>
<div class="flex h3 mb1">
  <div class="flex-auto border rounded p1">
    <%= user.email %>
  </div>
</div>

<hr>

<h4>アクセスログ</h4>
<div class="overflow-scroll h5">
  <table class="table-light overflow-hidden rounded border">
    <thead class="bg-darken-1">
      <tr>
        <th class="center">
          日付
        </th>
        <th class="center">
          連絡タイトル
        </th>
      </tr>
    </thead>
    <tbody>
      <% if requests.length == 0 %>
        <tr>
          <td class="center">
            なし
          </td>
          <td class="center">
          </td>
        </tr>
      <% else %>
        <% requests.each do |request| %>
          <tr>
            <td class="center">
              <%= request.requested_at.strftime("%m/%d %H:%M") %>
            </td>
            <td class="center">
              <%= request.spectator.article.title %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
