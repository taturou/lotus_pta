<div class="mxn1 mb1 h5">
  <a href="/" class="button button-narrow button-transparent blue">
    <i class="fa fa-home"></i>
  </a>
  /
  <span class="button button-narrow button-transparent gray">
    <i class="fa fa-book"></i>
  </span>
</div>

<% articles.reverse.each do |article| %>
  <div class="flex">
    <div class="flex-auto m0 gray">
      <%= article.created_at.strftime("%Y/%m/%d %H:%M") %>
    </div>
    <div class="right m0 gray">
      <i class="fa fa-check-square-o"></i>
      <!--@@@ <i class="fa fa-square-o"></i> -->
    </div>
  </div>
  <div class="flex h4 mb1">
    <a href='/articles/<%= article.id %>' class="button button-outline button-big rounded blue flex-auto">
      <%= article.title %>
    </a>
  </div>
<% end %>
