<%= breadcrumbs %>

<div class="flex">
  <div class="m0 h3">
    <%= article.title %>
  </div>
</div>
<div class="flex">
  <div class="m0 flex-auto gray">
    <%= article.user.nickname %>
  </div>
  <div class="m0 right gray">
    <%= article.created_at.ymdHM %>
  </div>
</div>
<div class="flex mb1">
  <div class="flex-auto border rounded p1">
    <%= article.content.html %>
  </div>
</div>
<div class="flex">
  <div class="m0 flex-auto gray">
  </div>
  <a href="/articles/<%= article.id %>/edit" class="button button-outline right blue mr1">
    <i class="fa fa-edit"></i>
    編集
  </a>
  <form method="POST" action="/articles/<%= article.id %>">
    <input name="_method" type="hidden" value="delete" />
    <button type="submit" class="button button-outline right blue">
      <i class="fa fa-trash-o"></i>
      削除
    </button>
  </form>
</div>

<hr>

<p class="h4">既読情報</p>
<div class="overflow-scroll">
  <table class="table-light overflow-hidden rounded border">
    <thead class="bg-darken-1 h6">
      <tr>
        <th class="center">
          <i class="fa fa-user"></i>
        </th>
        <th class="center">
          <i class="fa fa-navicon"></i>
        </th>
        <th class="center">
          <i class="fa fa-calendar"></i>
        </th>
      </tr>
    </thead>
    <tbody class="h5">
      <% users.each do |user| %>
        <tr>
          <th>
            <a href="/users/<%= user.id %>">
              <%= user.nickname %>
            </a>
          </th>
          <th class="center">
            <% if opened?(user) %>
              <i class="fa fa-folder-open-o"></i>
            <% else %>
              <i class="fa fa-folder-o"></i>
            <% end %>
            /
            <% if submitted?(user) %>
              <i class="fa fa-check-square-o"></i>
            <% else %>
              <i class="fa fa-square-o"></i>
            <% end %>
          </th>
          <th class="center h6">
            <% if opened?(user) %>
              <%= accessed_at(user) %>
            <% else %>
              <a href="<%= article.id %>/link/<%= user.id %>">
                <i class="fa fa-share"></i>
              </a>
            <% end %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="h6">
  <div class="flex">
    <div class="m1">
      <i class="fa fa-folder-o"></i>
      : 未読
    </div>
    <div class="m1">
      <i class="fa fa-folder-open-o"></i>
      : 既読
    </div>
    <div class="m1">
      <i class="fa fa-square-o"></i>
      : 未確認
    </div>
    <div class="m1">
      <i class="fa fa-check-square-o"></i>
      : 確認済み
    </div>
  </div>
</div>
